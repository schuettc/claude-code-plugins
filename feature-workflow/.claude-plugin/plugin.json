{
  "name": "feature-workflow",
  "version": "6.2.1",
  "description": "Feature lifecycle management with skill-centric architecture. Capture ideas (idea.md), plan implementations (plan.md), and complete with quality gates (shipped.md). Status determined by file presence with auto-generated DASHBOARD.md. Shared Python library for dashboard generation with minimal hooks.",
  "author": {
    "name": "Court Schuett"
  },
  "skills": "./skills/",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/pre_tool_use.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/pre_tool_use.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/post_tool_use.py",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/post_tool_use.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
